<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/toolbarNotification"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/color_base"
        android:elevation="2dp">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/textNotification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Notification"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:typeface="monospace" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/push_notificaion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/toolbarNotification"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8">

            <TextView
                android:id="@+id/btnPush"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawablePadding="20dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="Push Notification"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:theme="@style/MySwitch"
                app:switchTextAppearance="@style/MySwitch.text"
                android:checked="true"
                app:showText="true"
                android:textOn="ON"
                android:textOff="OFF"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popup_notificaion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@+id/push_notificaion"
        android:paddingLeft="30dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.8">

            <TextView
                android:id="@+id/btnPopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_popup"
                android:drawablePadding="20dp"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="Popup Notification"
                android:textColor="@color/grey_900"
                android:textSize="14sp"
                android:typeface="monospace" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_weight="0.2">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:theme="@style/MySwitch"
                app:switchTextAppearance="@style/MySwitch.text"
                android:checked="true"
                app:showText="true"
                android:textOn="ON"
                android:textOff="OFF"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
