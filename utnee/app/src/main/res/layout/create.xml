<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarCreate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/color_base">

        <TextView
            android:id="@+id/textCreate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:text="Create Shop"
            android:typeface="monospace"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/textCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.09"
                    android:text="Code"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/textInputCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Create Code"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:clickable="false"
                    android:gravity="center"/>

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/btnGenerate"
                    android:layout_width="match_parent"
                    android:layout_weight="1.32"
                    android:paddingLeft="2dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_code_radio"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textShopName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <EditText
                    android:id="@+id/textInputShopName"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:maxLength="50"
                    android:hint="Enter shop name"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/color_cursor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Address"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/textInputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Shop address"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textBlank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="12dp"
                    android:textColor="@color/orange"
                    android:layout_weight="1.45"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/textWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="warning"
                    android:layout_weight="0.6"
                    android:textSize="12dp"
                    android:paddingLeft="3dp"
                    android:textColor="@color/orange"
                    android:gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textTel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tel."
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <EditText
                    android:id="@+id/textInputTel"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:hint="Enter phone number"
                    android:textColorHint="@color/grey"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/color_cursor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textOpenTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Open Time"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/textInputOpen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Open Time"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textCloseTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Close Time"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/textInputClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Close Time"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Types"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <TextView
                    android:id="@+id/textInputType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Category"
                    android:layout_weight="0.6"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:drawableRight="@drawable/ic_arrow_drop_down"
                    android:textColor="@color/blue"
                    android:padding="8dp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rate"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <LinearLayout
                    android:id="@+id/textInputRate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    android:weightSum="6">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_star_grey"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_star_grey"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_star_grey"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_star_grey"
                        android:background="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_star_grey"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/rate_count"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="14sp"
                        android:paddingLeft="8dp"
                        android:textColor="@color/blue"
                        android:typeface="monospace"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_dot"
                        android:drawablePadding="3dp"
                        android:text="0.0"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textShopDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Descriptions"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <EditText
                    android:id="@+id/textInputDescription"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:hint="Enter Descriptions"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/color_cursor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textShopLink"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Link"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <EditText
                    android:id="@+id/textInputShopLink"
                    android:layout_weight="0.6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_stoke_grey_square"
                    android:gravity="center"
                    android:typeface="monospace"
                    android:hint="Enter Link"
                    android:textColorHint="@color/grey"
                    android:inputType="text"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textCursorDrawable="@drawable/color_cursor"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Images"
                    android:layout_weight="1.45"
                    android:textColor="@color/blue"
                    android:padding="10dp"
                    android:gravity="end"/>

                <LinearLayout
                    android:id="@+id/textInputImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.6"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_stoke_grey_square"/>

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_stoke_grey_square"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_stoke_grey_square"/>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_stoke_grey_square"/>

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_stoke_grey_square"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btnCreate"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Create Shop"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:padding="10dp"
                android:background="@drawable/border_base"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>