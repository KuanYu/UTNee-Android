<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbarShopDetail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/color_base">

        <TextView
            android:id="@+id/textNameShop"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:text="Name Shop"
            android:typeface="monospace"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black">

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true">
                </android.support.v4.view.ViewPager>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/point1"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_dot"/>

                    <ImageView
                        android:id="@+id/point2"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_dot"/>

                    <ImageView
                        android:id="@+id/point3"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_dot"/>

                    <ImageView
                        android:id="@+id/point4"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_dot"/>

                    <ImageView
                        android:id="@+id/point5"
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_dot"/>
                    
                </LinearLayout>
                
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/footerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/textInputRate"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/rate_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:textSize="16sp"
                            android:textColor="@color/blue"
                            android:typeface="monospace"
                            android:gravity="center_vertical"
                            android:text="0.0"
                            tools:ignore="NestedWeights" />

                        <ImageView
                            android:id="@+id/star1"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_star_grey"/>

                        <ImageView
                            android:id="@+id/star2"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_star_grey"/>

                        <ImageView
                            android:id="@+id/star3"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_star_grey"/>

                        <ImageView
                            android:id="@+id/star4"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_star_grey"/>

                        <ImageView
                            android:id="@+id/star5"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_star_grey"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:drawableLeft="@drawable/ic_code_dot"
                        android:drawablePadding="5dp"
                        android:textColor="@color/green"
                        android:typeface="monospace"
                        android:gravity="start"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="Code"
                        android:background="?attr/selectableItemBackground"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:typeface="monospace"
                    android:drawableLeft="@drawable/ic_dot_grey"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:gravity="center_vertical"
                    android:text="type"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:typeface="monospace"
                        android:gravity="center_vertical"
                        android:text="Address"
                        android:paddingLeft="23dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey"
                    android:typeface="monospace"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_timer"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:text="Time"/>

                <TextView
                    android:id="@+id/textTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:typeface="monospace"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:text="Phone"
                    android:background="?attr/selectableItemBackground"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_note"
                        android:layout_marginTop="3dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/grey"
                        android:typeface="monospace"
                        android:gravity="center_vertical"
                        android:text="Description\nDescription\nDescription"
                        android:paddingLeft="23dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/textLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:typeface="monospace"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_link"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:text="Link"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>