<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@null">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_devices"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_device_android"/>

        <LinearLayout
            android:id="@+id/space_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image_devices"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/name_devices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingRight="2dp"
                android:textColor="@color/blue"
                android:text="Name"
                android:layout_weight="1.3"/>

            <TextView
                android:id="@+id/time_deivces"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:drawableLeft="@drawable/ic_dot"
                android:drawablePadding="5dp"
                android:text="Active now"
                android:layout_weight="0.7"/>

        </LinearLayout>

        <TextView
            android:id="@+id/location_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/grey"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image_devices"
            android:layout_below="@+id/space_name"
            android:text="location"/>

    </RelativeLayout>

</LinearLayout>